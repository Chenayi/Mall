<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray_default"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@color/gray_default" />

            <TextView
                android:id="@+id/tv_no_stock"
                android:layout_width="88dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/background_000_65_corners_9999"
                android:gravity="center"
                android:text="无货"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="澳大利亚月见草油软胶囊"
                android:textColor="@color/c_2e3033"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="¥158"
                    android:textColor="#8A9099"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="#8A9099"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>