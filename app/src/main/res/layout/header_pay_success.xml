<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/chatu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="提交成功"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="支付方式："
            android:textColor="@color/c_2e3033"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:textColor="@color/c_2e3033"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_default"
                android:textSize="13dp"
                android:textStyle="bold"
                tools:text="¥85.00" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_see_order"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:background="@drawable/background_8a9099_stroke_corners_9999"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_marginLeft="23dp"
            android:background="@drawable/background_8a9099_stroke_corners_9999"
            android:gravity="center"
            android:text="再逛逛"
            android:textColor="#666" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注意："
            android:textColor="#8A9099"
            android:textSize="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="康之家不会以订单异常、系统升级为由，要求您点击任何链接进行退款操作。"
            android:textColor="#8A9099"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>