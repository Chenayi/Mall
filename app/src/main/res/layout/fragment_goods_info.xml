<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kzj.mall.widget.SlideDetailsLayout
        android:id="@+id/slide_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kzj.mall.widget.ObservableScrollView
            android:id="@+id/osv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_banner"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                    <cn.bingoogolapple.bgabanner.BGABanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:banner_indicatorGravity="right|bottom"
                        app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
                        app:banner_isNumberIndicator="true"
                        app:banner_pointAutoPlayAble="false"
                        app:banner_pointContainerBackground="@color/tran"
                        app:banner_transitionEffect="defaultEffect" />

                    <TextView
                        android:id="@+id/tv_banner_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/background_aca89d_corners_9999"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:text="0/0"
                        android:textColor="@color/white"
                        android:textSize="9dp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="48dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/background_orange_corners_9999"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:minWidth="170dp"
                            android:paddingLeft="21dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="下单即可获得赠品肾宝糖浆1盒"
                            android:textColor="@color/white"
                            android:textSize="11dp" />

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="37dp"
                            android:src="@mipmap/detail_notice_icon" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/background_green_stroke_corners_9999"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="OTC"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_banner"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-30dp"
                    android:orientation="vertical">

                    <!-- 标题 -->
                    <include
                        android:id="@+id/detail_title_content"
                        layout="@layout/include_detail_title_content" />

                    <!-- 规格 -->
                    <LinearLayout
                        android:id="@+id/detail_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <include layout="@layout/include_detail_spec" />
                    </LinearLayout>

                    <!-- 组合 -->
                    <LinearLayout
                        android:id="@+id/detail_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <include layout="@layout/include_detail_group" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </com.kzj.mall.widget.ObservableScrollView>

        <include layout="@layout/include_item_tab" />
    </com.kzj.mall.widget.SlideDetailsLayout>
</layout>