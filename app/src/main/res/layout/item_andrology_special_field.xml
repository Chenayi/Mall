        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="¥128.00"
            android:textColor="#FF4F0A"
            android:textSize="11dp" />


    </LinearLayout>

</RelativeLayout>