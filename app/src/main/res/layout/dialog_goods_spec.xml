<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_goods"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_white_corners_8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/iv_goods"
                    android:gravity="bottom"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="合计：¥7898.00"
                        android:textColor="@color/orange_default"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.allen.library.SuperTextView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        app:sCenterTextColor="@color/orange_default"
                        app:sCenterTextSize="9dp"
                        app:sCenterTextString="立省：￥47.00"
                        app:sShapeCornersRadius="9999dp"
                        app:sShapeSelectorNormalColor="#FFF8F5"
                        app:sShapeSelectorPressedColor="#FFF8F5"
                        app:sShapeStrokeColor="@color/orange_default"
                        app:sShapeStrokeWidth="1dp"
                        app:sUseShape="true" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/close2" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rl_top"
                android:layout_marginTop="10dp"
                android:background="@color/gray_default" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_top"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10.5dp"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="14dp"
                        android:text="规格"
                        android:textColor="#2E3033" />

                    <com.kzj.mall.widget.SuperFlowLayout
                        android:id="@+id/sfl_goods_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray_default" />

                    <LinearLayout
                        android:id="@+id/ll_goods_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="14dp"
                            android:text="套餐"
                            android:textColor="#2E3033" />

                        <com.kzj.mall.widget.SuperFlowLayout
                            android:id="@+id/sfl_goods_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray_default" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="数量"
                            android:textColor="#6A6E75" />


                        <LinearLayout
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/background_gray_stroke_corners_9999"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_minus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/minus" />

                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="1dp"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="center"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:singleLine="true"
                                android:text="1"
                                android:textColor="#242A33" />

                            <ImageView
                                android:id="@+id/iv_plus"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:scaleType="centerInside"
                                android:src="@mipmap/plus" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <!-- 底部 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_ask"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/zixun_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="咨询"
                            android:textColor="#6A6E75"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/phone_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="电话"
                            android:textColor="#6A6E75"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_cart"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/cart_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="购物车"
                                android:textColor="#6A6E75"
                                android:textSize="10dp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_cart_num"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/background_orange_corners_9999"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="19"
                            android:textColor="@color/white"
                            android:textSize="9dp" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_add_cart"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="#2E3033"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/orange_default"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>