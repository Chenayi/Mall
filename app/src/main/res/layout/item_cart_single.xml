<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_white_corners_8"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:visibility="gone">

        <com.allen.library.SuperTextView
            android:layout_width="32dp"
            android:layout_height="16dp"
            app:sCenterTextColor="@color/colorPrimary"
            app:sCenterTextSize="11dp"
            app:sCenterTextString="疗程"
            app:sShapeCornersRadius="9999dp"
            app:sShapeStrokeColor="@color/colorPrimary"
            app:sShapeStrokeWidth="1dp"
            app:sUseShape="true" />

        <TextView
            android:id="@+id/tv_combination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:lines="1"
            android:singleLine="true"
            android:text="2盒起495元/盒疗程价！"
            android:textColor="#2E3033"
            android:textSize="13dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/check_nor" />

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:src="@color/gray_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="SwSwisse 澳大利亚 月见草油软胶囊isse 澳大利亚 月见草油软胶囊"
                android:textColor="#2E3033"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="￥158"
                    android:textColor="@color/orange_default"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_minus"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/minus_nor" />

                    <EditText
                        android:id="@+id/tv_goods_num"
                        android:layout_width="45dp"
                        android:layout_height="27dp"
                        android:background="#F5F5F5"
                        android:focusable="false"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="#242A33"
                        android:textSize="12dp" />


                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/plus_cart" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_goods_pre_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="40dp"
        android:text="已省¥100.00"
        android:textColor="@color/orange_default"
        android:textSize="13dp"
        android:visibility="gone" />

</LinearLayout>