<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/check_nor"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_white_corners_8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="13dp">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/gray_default" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="SwSwisse 澳大利亚 月见草油软胶囊isse 澳大利亚 月见草油软胶囊 "
                    android:textColor="@color/c_2e3033" />

                <TextView
                    android:id="@+id/tv_goods_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="适用于治疗感冒、发烧、咳嗽等症…"
                    android:textColor="#8A9099"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="¥78.90"
                    android:textColor="@color/orange_default" />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>