<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_default" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_default"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_left"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/gray_default"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_white_corners_8"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_goods"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:src="@color/gray_default"
                app:riv_corner_radius_top_left="8dp"
                app:riv_corner_radius_top_right="8dp" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="999 小儿氨酚黄那敏颗"
                android:textColor="@color/c_2e3033"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_goods_indication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="热镇痛用于感冒引起的头…"
                android:textColor="#8A9099"
                android:textSize="12dp"
                android:ellipsize="end"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥179"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_goods_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="¥179"
                    android:textColor="#8A9099"
                    android:textSize="11dp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_right"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/gray_default"/>

        <View
            android:id="@+id/view_right2"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_default"/>
    </LinearLayout>

</LinearLayout>