                        android:textSize="11dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/icon_right" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_yp7"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@mipmap/yp_7" />

                    <ImageView
                        android:id="@+id/iv_yp8"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/yp_8" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/gray_f0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_corners_8"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_yp9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="肾宝片"
                    android:textColor="@color/c_2e3033"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="补肾佳选"
                    android:textColor="@color/c_8a9099"
                    android:textSize="11dp" />


                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/yp_9" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yp10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="生精片"
                    android:textColor="@color/c_2e3033"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="至尊持久"
                    android:textColor="@color/c_8a9099"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/yp_10" />

            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/gray_f0"/>

            <LinearLayout
                android:id="@+id/ll_yp11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="汤臣倍健"
                    android:textColor="@color/c_2e3033"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="美白"
                    android:textColor="@color/c_8a9099"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/yp_11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_yp12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="脱发白发"
                    android:textColor="@color/c_2e3033"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="脱发克星"
                    android:textColor="@color/c_8a9099"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/yp_12" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>