<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_corners_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="103dp"
                android:paddingBottom="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="20dp"
                android:text="确定要退出么？"
                android:textColor="#2E3033"
                android:textSize="17dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_default" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <com.allen.library.SuperTextView
                    android:id="@+id/tv_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:sCenterTextColor="#2E3033"
                    app:sCenterTextSize="15dp"
                    app:sCenterTextString="去意已决"
                    app:sShapeCornersBottomLeftRadius="8dp"
                    app:sUseShape="true" />


                <com.allen.library.SuperTextView
                    android:id="@+id/tv_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:sCenterTextColor="@color/white"
                    app:sCenterTextSize="15dp"
                    app:sCenterTextString="我再想想"
                    app:sShapeCornersBottomRightRadius="8dp"
                    app:sShapeSelectorNormalColor="@color/colorPrimary"
                    app:sShapeSelectorPressedColor="@color/colorPrimary"
                    app:sUseShape="true" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>