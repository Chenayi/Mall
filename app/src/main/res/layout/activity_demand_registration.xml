<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kzj.mall.widget.RootLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:titleBarColor="@color/fb"
        app:titleBarLeftIcon="@mipmap/back_black"
        app:titleBarRightTextColor="@color/c_2e3033"
        app:titleBarTitle="处方药需求登记"
        app:titleBarTitleColor="@color/c_2e3033">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_white_corners_8"
                    android:minHeight="70dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_create_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="新建收货地址"
                                android:textColor="#2E3033"
                                android:textSize="17dp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/ll_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="司马嫣然"
                                        android:textColor="#2E3033"
                                        android:textSize="17dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_mobile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="137****1234"
                                        android:textColor="#2E3033"
                                        android:textSize="17dp"
                                        android:textStyle="bold" />

                                    <com.allen.library.SuperTextView
                                        android:id="@+id/tv_default"
                                        android:layout_width="27dp"
                                        android:layout_height="14dp"
                                        android:layout_marginLeft="4dp"
                                        android:visibility="gone"
                                        app:sCenterTextColor="@color/colorPrimary"
                                        app:sCenterTextSize="9dp"
                                        app:sCenterTextString="默认"
                                        app:sShapeCornersRadius="9999dp"
                                        app:sShapeStrokeColor="@color/colorPrimary"
                                        app:sShapeStrokeWidth="1dp"
                                        app:sUseShape="true" />
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="广东省广州市白云区永泰泰兴路6号电商创意园C1栋二楼"
                                    android:textColor="#6A6E75"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="20dp"
                            android:src="@mipmap/arrow_right" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/colorAccent" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_white_corners_8"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--单件商品-->

                        <LinearLayout
                            android:id="@+id/ll_one_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <ImageView
                                android:layout_width="53dp"
                                android:layout_height="53dp"
                                android:src="@color/gray_default" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="53dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:text="SwSwisse 澳大利亚 月见草油软胶囊isse 澳大利亚 月见草油软胶囊"
                                    android:textColor="#6A6E75"
                                    android:textSize="12dp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:text="¥158"
                                        android:textColor="#2E3033"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:text="x7"
                                        android:textColor="#6A6E75"
                                        android:textSize="12dp" />
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!--多件商品-->

                        <LinearLayout
                            android:id="@+id/ll_multi_goods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                                    android:id="@+id/rv_goods"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </FrameLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/more" />


                        </LinearLayout>


                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_mark"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/background_f0_corners_9999"
                        android:hint="给康之家留言"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:singleLine="true"
                        android:textColorHint="#8A9099"
                        android:textSize="12dp" />

                </LinearLayout>


                <!-- 分割线 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_white_corners_8"
                    android:orientation="horizontal">


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="国家相关法律规定，处方药需凭处方笺销售，请上传处方笺，如需求紧急请直接拨400-636-5343药师咨询热线"
                    android:textColor="#8A9099"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="12dp" />


            </LinearLayout>
        </ScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计：¥0.00"
                android:textColor="@color/c_2e3033"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_submit_demand"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="提交需求"
                android:textColor="@color/fb"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.kzj.mall.widget.RootLayout>
</layout>